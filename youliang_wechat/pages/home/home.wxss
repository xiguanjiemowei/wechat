.box{
  width:100%;
  height:100%;
  background: #f0bf45;
}
.top_row{
  width:100%;
  display: flex;
  justify-content: space-around;
  background: #f0bf45;
}
.desc{
  width:100px;
  overflow: hidden;
  text-align-last: center;
  position: relative;
  margin-bottom: 20rpx;
}
.userinfo{
  width: 120px;
}
.user{
   width:114px;
   height:114px;
   border-radius: 50%;
   margin: 40rpx auto 20rpx;
   border: 2px solid #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar{
  width:110px;
  height:110px;
  border-radius: 50%;
  border:2px solid #f0bf45;
}
.userinfo-nickname{
  font: 34rpx/52rpx 苹方;
  font-weight:700;
}
.icon{
  position: absolute;
  font: 30rpx/50rpx 苹方;
  top:50%;
  margin-top: -80rpx;
  left:50%;
  margin-left: -40rpx;
  color: #745e16;
  text-align: center;
}
.icon image{
  display: block;
  width: 80rpx;
  height:80rpx;
  margin:20rpx auto;
}
.icon textz{
  color: #745416;
}
.user_map{
  width:100%;
  text-align: center;
  padding-top: 20rpx;
  font-size:34rpx;
  margin: 0 auto 20rpx;
}
.user_map image{
  width:20rpx;
  height:26rpx;
}
.class{
  width:100%;
  text-align: center;
  font-size:34rpx;
  margin: 20px auto 10px;
}
.shop{
  text-align: center;
  font-size: 36rpx;
  line-height:40rpx;
  font-weight:700; 
  margin: 60rpx auto 40rpx;
}
.shop view{
  font: 30rpx;
  display: inline;
  padding: 0 40rpx;
}
.int{
  font:32rpx/50rpx 苹方;
  text-align: center;
  width:70%;
  margin: 120rpx auto 100rpx;
}
.edit{
  display: block;
  font:32rpx/50rpx 苹方;
  text-align: center;
  margin: 30px auto 20px;
  width: 100%;
  height:auto;
  overflow: hidden;
}
.edit image{
  width:26rpx;
  height:26rpx;
  margin-right: 15rpx;
}
.edit .edit_btn{
  background:#f0bf45;
  display: inline;
}
.edit .edit_btn::after{
  border: none;
}
.button{
  width:60%;
  height:76rpx;
  background: #272536;
  border-radius: 10rpx;
  text-align: center;
  font: 30rpx/76rpx 苹方;
  color: #fff;
  margin: auto;
}