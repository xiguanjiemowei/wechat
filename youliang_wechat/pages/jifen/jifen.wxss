page{
  background: #f0bf45;
  width:100%;
  height:100%;
}
.box{
  padding-top:1rpx; 
  width:100%;
  height:100%;
  background: #f0bf45;
}
.ad{
  width: 85%;
  height: 40px;
  line-height: 40px;
  background: #222;
  color: #fff;
  font: 28rpx/80rpx 苹方;
  position: relative;
  border-radius:12rpx;
  padding-left: 60rpx;
  margin: 20rpx auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.ad image{
  position: absolute;
  left: 20rpx;
  top:24rpx;
  width:28rpx;
  height:28rpx;
}
.top_row{
  width:100%;
  display: flex;
  justify-content: space-around;
  height:400rpx;
  margin-bottom: 20rpx;
}
.desc{
   width:244rpx;
   height:244rpx;
   border-radius: 50%;
   margin: 40rpx auto 20rpx;
   border: 4rpx solid  #f0bf45;
}
.user{
   width:228rpx;
   height:228rpx;
   border-radius: 50%;
   border: 4rpx solid #fff;
}
.userinfo-avatar{
  width:220rpx;
  height:220rpx;
  border-radius: 50%;
  border:4rpx solid #f0bf45;
}
.userinfo-nickname{
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight:700;
}
.pk{
  width: 100%;
  margin: 10px 0 0;
}
.swiper-tab{  
    width: 100%;  
    text-align: center;  
    line-height: 60rpx;
    background:#f0bf45;
    padding-bottom: 40rpx;
}  
.swiper-tab-list{  
    font-size: 35rpx;  
    display: inline-block;  
    width: 50%;  
    color: #222;  
    position: relative;
}  
.triangle{
  width:46rpx;
  height:28rpx;
  position: absolute;
  bottom:-40rpx;
  left: 160rpx;
  display: none;
}
.on{ 
  color: #fff;  
  font-weight: 700;
}  
.on .triangle{
  display:block;
  width:46rpx;
  height:28rpx;
  position: absolute;
  bottom:-42rpx;
  left: 160rpx;
}

.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  background: #fff;
  } 


.th{
  height:76rpx;
  padding: 30rpx 20rpx;
  display: flex;
  text-align: left;
  border-bottom: 1rpx solid #f2f4f6 ;
}
.th .tr_header{
  width:78rpx;
  height: 78rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  margin: 0 10rpx 0 50rpx;
}
.th .null{
  line-height: 76rpx;
  padding-left:10rpx;
  font-size:28rpx;
  font-weight:700;

}
.th .tr_header image,.td .tr_header image{
  width:74rpx;
  height: 74rpx;
  border: 3rpx solid #f0bf45;
  border-radius: 50%;
}
.th .userinfo-nickname{
  font-size: 14px;
  font-weight: 700;
  text-align: left;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.td{
  height:76rpx;
  padding: 30rpx 20rpx;
  display: flex;
  text-align: left;
  border-bottom: 1rpx solid #f2f4f6;
}
.td text{
  font-size: 36rpx;
  font-weight: 700;
  line-height: 76rpx;
  padding-left: 10rpx;
}

.td .tr_img{
  width: 70%;
  display: flex;
}
.td .tr_img .name{
  font-size: 28rpx;
  font-weight: 700;
  line-height: 76rpx;
  padding-left: 10rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.td .tr_header{
  width:78rpx;
  height: 78rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  margin: 0 10rpx 0 25rpx;
}
.tr .td:nth-child(2) text{
  color: red;
}
.tr .td:nth-child(3) text{
  color: #f87500;
}
.tr .td:nth-child(4) text{
  color: #fde40f;
}
.tr .td:last-child{
  border-bottom: none;
}
.fra_has{
  display: flex;
  width:100%;
}
.fra_has .has_text{
  width: 70%;
  font-size:28rpx;
  font-weight:700;
  padding-left:10rpx;
  line-height: 43rpx;
}
.fra_has .has_text .has_number{
  color:#f0bf45;
  font-weight: normal;
}
.fra_has .fra{
  width: 30%;
  font-size: 14px;
  font-weight: 700;
  line-height: 76rpx;
  text-align: right;
}
.td .fra{
  width: 30%;
  font-size: 28rpx;
  font-weight: 700;
  line-height: 76rpx;
  text-align: right;
}
