.box{
  width:100%;
  height:100%;
  background: #f0bf45;
}
.top_row{
  width:100%;
  display: flex;
  justify-content: space-around;
  background: #f0bf45;
}
.desc{
  width:33%;
  overflow: hidden;
  text-align-last: center;
  position: relative;
  margin-bottom: 20rpx;
}
.user{
   width:228rpx;
   height:228rpx;
   border-radius: 50%;
   margin: 40rpx auto 20rpx;
   border: 2px solid #fff;
}
.userinfo-avatar{
  width:220rpx;
  height:220rpx;
  border-radius: 50%;
  border:4rpx solid #f0bf45;
}
.userinfo-nickname{
  font: 32rpx/50rpx 苹方;
  font-weight:700;
}
.icon{
  position: absolute;
  font: 30rpx/50rpx 苹方;
  top:50%;
  margin-top: -80rpx;
  left:50%;
  margin-left: -60rpx;
  color: #745e16;
}
.icon image{
  display: block;
  width: 80rpx;
  height:80rpx;
  margin:20rpx auto;
}
.icon textz{
  color: #745416;
}

.form{
  margin-top: 40rpx;
}
.button{
  width:75%;
  height:90rpx;
  background: #272536;
  border-radius: 10rpx;
  text-align: center;
  font: 30rpx/90rpx 苹方;
  color: #fff;
  margin: 60rpx auto 0;
  position: relative;
}
.button image{
  position: absolute;
  width:16rpx;
  height:26rpx;
  top:32rpx;
  right:30rpx;
}